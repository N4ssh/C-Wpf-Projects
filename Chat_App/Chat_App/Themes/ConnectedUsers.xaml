<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="ListViewItem" x:Key="ConnectedUsers">

        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="#FF232527"/>
            </Trigger>
        </Style.Triggers>


        <Setter Property="Background" Value="#FF2A2C2F"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListViewItem">
                    <Border Background="{TemplateBinding Background}" Height="50" CornerRadius="4">

                        <StackPanel Orientation="Horizontal" Margin="10 0 0 0">

                            <Ellipse Width="35" Height="35">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="https://ia803204.us.archive.org/4/items/discordprofilepictures/discordblue.png"/>
                                </Ellipse.Fill>
                            </Ellipse>

                            <Label Content="{Binding Username}" FontSize="15" Margin="2 6 0 0" Foreground="White"/>
                        </StackPanel>

                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

    </Style>

</ResourceDictionary>